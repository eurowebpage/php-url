################################################################################
# Exemple url : https://supportclient.eu/home/contact
#               https://supportclient.eu/knowledge_base
################################################################################

<?php

$adresse = $_SERVER["REQUEST_URI"];
$adresse = str_replace('/', ' ', $adresse);
$adresse = str_replace('_', ' ', $adresse); 
$adresse = str_replace('home', ' ', $adresse);

echo $adresse;

################################################################################
# Résultat : contact
################################################################################

################################################################################
# exemple d'utilisation
# copier le code ci-dessous ds un fichier ex : titre.php
################################################################################


